<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barbershop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.schedules.confirm.ConfirmSchedule"
            android:parentActivityName=".ui.schedules.MainActivity" />
        <activity
            android:name=".ui.schedules.barber.barberdetail.comment.CommentActivity"
            android:parentActivityName=".ui.schedules.barber.barberdetail.BarberDetail" />
        <activity
            android:name=".ui.schedules.barber.barberdetail.BarberDetail"
            android:parentActivityName=".ui.schedules.MainActivity" />
        <activity
            android:name=".ui.schedules.barber.BarberLocationList"
            android:label="@string/title_units"
            android:parentActivityName=".ui.schedules.MainActivity" />
        <activity
            android:name=".ui.schedules.MainActivity"
            android:theme="@style/AppThemeNobar" />
        <activity android:name=".ui.core.CoreActivity" />
        <activity
            android:name=".ui.presentation.PresentationActivity"
            android:theme="@style/AppThemeNobar" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/AppThemeNobar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>