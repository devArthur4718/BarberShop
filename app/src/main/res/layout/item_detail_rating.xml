<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >

        <ImageView
            android:id="@+id/ivDetailBackground"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/gray_rounded"
            android:tint="@color/yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivBadgeBig"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_clock_roud"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/ivDetailBackground"
            app:layout_constraintEnd_toEndOf="@+id/ivDetailBackground"
            app:layout_constraintStart_toStartOf="@+id/ivDetailBackground"
            app:layout_constraintTop_toTopOf="@+id/ivDetailBackground" />

        <ImageView
            android:id="@+id/ivBlackBadge"
            android:layout_width="@dimen/badge"
            android:layout_height="@dimen/badge"
            android:contentDescription="@string/app_name"
            android:src="@drawable/gray_rounded"
            android:tint="@android:color/black"
            app:layout_constraintEnd_toEndOf="@+id/ivDetailBackground"
            app:layout_constraintTop_toTopOf="@+id/ivDetailBackground" />


        <TextView
            android:id="@+id/tvBadgeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100"
            android:maxLines="3"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/ivBlackBadge"
            app:layout_constraintEnd_toEndOf="@+id/ivBlackBadge"
            app:layout_constraintStart_toStartOf="@+id/ivBlackBadge"
            app:layout_constraintTop_toTopOf="@+id/ivBlackBadge" />


        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/roboto_bold"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ivDetailBackground"
            app:layout_constraintStart_toStartOf="@+id/ivDetailBackground"
            app:layout_constraintTop_toBottomOf="@+id/ivDetailBackground"
            tools:text="Pontualidade" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>